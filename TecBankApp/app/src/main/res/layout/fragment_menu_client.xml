<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientView.MenuClientFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back_client_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="500dp"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/account_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="184dp"
            android:text="Cuentas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/loans_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="36dp"
            android:text="Prestamos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cards_button" />

        <Button
            android:id="@+id/cards_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="36dp"
            android:text="Tarjetas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>