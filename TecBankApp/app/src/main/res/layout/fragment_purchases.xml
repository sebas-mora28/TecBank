<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientView.cards.PurchasesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/from_button"
            android:layout_width="107dp"
            android:layout_height="45dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:text="Desde"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/to_button"
            android:layout_width="107dp"
            android:layout_height="45dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="36dp"
            android:text="Hasta"
            app:layout_constraintStart_toEndOf="@+id/from_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/from_text"
            android:layout_width="128dp"
            android:layout_height="26dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:text="dd/mm/yy"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/from_button" />

        <TextView
            android:id="@+id/to_text"
            android:layout_width="128dp"
            android:layout_height="26dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="12dp"
            android:text="dd/mm/yy"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/from_text"
            app:layout_constraintTop_toBottomOf="@+id/to_button" />


        <Button
            android:id="@+id/consult_button"
            android:layout_width="129dp"
            android:layout_height="49dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="148dp"
            android:text="Consultar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/purchase_list"
            android:layout_width="414dp"
            android:layout_height="522dp"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="209dp">

        </ListView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>