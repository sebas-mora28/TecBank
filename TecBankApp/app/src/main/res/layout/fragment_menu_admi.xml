<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminView.MenuAdmiFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back_admin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="64dp"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mora_management_button" />

        <Button
            android:id="@+id/roles_management_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="104dp"
            android:text="Gestion de roles"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/client_management_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:text="Gestion de clientes"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roles_management_button" />

        <Button
            android:id="@+id/account_management_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:text="Gestion de cuentas"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/client_management_button" />

        <Button
            android:id="@+id/card_management_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:text="Gestion de tarjetas"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_management_button" />

        <Button
            android:id="@+id/mora_management_button"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:text="Gestion de mora"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_management_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>