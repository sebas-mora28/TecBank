<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientView.accounts.transactions.TransactionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/deposits_button"
            android:layout_width="243dp"
            android:layout_height="63dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="120dp"
            android:text="Depositos"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/retiros_button"
            android:layout_width="243dp"
            android:layout_height="63dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="68dp"
            android:text="Retiros"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deposits_button" />

        <Button
            android:id="@+id/cards_button"
            android:layout_width="243dp"
            android:layout_height="63dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="68dp"
            android:text="Tarjetas"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/retiros_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>